#!/bin/bash -eu

version="$1"

# Copy the version specific files to python directory
shopt -s dotglob
cp -rf ${OPENSHIFT_PYTHONNODEJS_DIR}/versions/${version}/etc/* $OPENSHIFT_PYTHONNODEJS_DIR/etc
[ -d ${OPENSHIFT_PYTHONNODEJS_DIR}/versions/${version}/metadata ] && cp -rf ${OPENSHIFT_PYTHONNODEJS_DIR}/versions/${version}/metadata/* $OPENSHIFT_PYTHONNODEJS_DIR/metadata

# Create/truncate gear-editable Apache configuration files
echo > $OPENSHIFT_PYTHONNODEJS_DIR/etc/conf.d/openshift.conf
echo > $OPENSHIFT_PYTHONNODEJS_DIR/etc/conf.d/passenv.conf

cp -f ${OPENSHIFT_PYTHONNODEJS_DIR}/versions/1.0/etc/conf.d/performance.conf.erb $OPENSHIFT_PYTHONNODEJS_DIR/conf/performance.conf.erb
cp -f $OPENSHIFT_PYTHONNODEJS_DIR/conf/performance.conf.erb $OPENSHIFT_PYTHONNODEJS_DIR/conf/performance.conf.erb.hidden
